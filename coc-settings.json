{
  "json.format.enable": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "yaml.schemas": {
    "https://github.com/asyncapi/asyncapi/raw/master/versions/2.0.0/schema.json": "*.asyncapi.yaml",
    "http://json.schemastore.org/github-workflow": "/.github/workflow/*.yml",
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "docker-compose*.yml"
  },
  "diagnostic.level": "warning",
  "diagnostic.enable": true,
  "clangd.semanticHighlighting": true,
  "texlab.build.onSave": true,
  "texlab.build.args": [
      "-pdf",
      "-interaction=nonstopmode",
      "-synctex=1",
      "%f"
  ],
  "texlab.forwardSearch.executable": "zathura",
  "texlab.forwardSearch.args": ["--synctex-forward=%l:1:%f", "%p"],
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "pyright.organizeimports.provider": "isort",
  "git.enableGutters": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.chainingHintsSeparator": "→ ",
  "rust-analyzer.inlayHints.typeHintsSeparator": "⊢ ",
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.methodReferences": true,
  "languageserver": {
    "lean": {
      "command": "lean-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "lean"
      ],
      "rootPatterns": [
        "leanpkg.toml"
      ]
    },
    "agda": {
      "command": "als",
      "args": ["-p-"],
      "filetypes": [
        "agda"
      ]
    },
    "prolog": {
        "command": "swipl",
        "args": [
            "-g", "use_module(library(lsp_server)).",
            "-g", "lsp_server:main",
            "-t", "halt",
            "--", "stdio"
        ],
        "filetypes": ["prolog"]
    }
  }
}
